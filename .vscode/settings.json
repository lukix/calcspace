{
  "eslint.workingDirectories": [
    "client",
    "server"
  ],

  "editor.formatOnSave": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Enable per-language
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.formatOnSave": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
}
